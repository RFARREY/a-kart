<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/col_4"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/pressable_bg"
    android:paddingLeft="@dimen/col_1"
    android:paddingRight="@dimen/col_1">
  <com.frogdesign.akart.view.CheckableImageView
      android:id="@+id/selectable"
      android:src="@drawable/selectable_car"
      android:padding="@dimen/col_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <com.makeramen.roundedimageview.RoundedImageView
      android:id="@+id/avatar"
      android:layout_width="@dimen/col_3"
      android:layout_height="@dimen/col_3"
      android:src="@drawable/banana"
      app:riv_corner_radius="@dimen/col_1"
      android:scaleType="centerCrop"
      app:riv_mutate_background="true"/>
  <TextView
      android:id="@android:id/text1"
      android:paddingLeft="@dimen/col_2"
      android:paddingRight="@dimen/col_2"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textSize="12dp"
      android:textColor="@color/militaryGreen"
      tools:text="Test"
      />
</LinearLayout>